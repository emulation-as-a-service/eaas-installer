clustermanager:
  name: default
  admin_api_access_token: "{{ eaas_cluster_api_access_token }}"
  providers:
  - name: default
    type: blades
    protocol: "{{ eaas_protocol }}"
    node_allocator:
      node_capacity:
        cpu: {{ clustermgr.node_cores }}
        memory: {{ clustermgr.node_memory }} MB
      node_addresses:
      - {{ eaas_hostname }}:{{ eaas_public_port }}
      healthcheck:
        url_template: "{% raw %}{{address}}{% endraw %}/emucomp/health"
    poolscaler:
      min_poolsize: 1
      max_poolsize: 1
